generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  ADMIN
  BUSINESS_OWNER
}

enum PlanType {
  FREE
  PRO
  ENTERPRISE
}

enum TemplateOrientation {
  square
  wide
  story
}

enum PostStatus {
  PENDING
  ACTIVE
  INACTIVE
}

model User {
  id         String     @id @default(cuid())
  email      String     @unique
  password   String
  name       String?
  role       UserRole   @default(BUSINESS_OWNER)
  businesses Business[]
  plan       UserPlan?
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt
}

model UserPlan {
  id        String    @id @default(cuid())
  user      User      @relation(fields: [userId], references: [id])
  userId    String    @unique
  planType  PlanType  @default(FREE)
  quota     Json?
  renewDate DateTime?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model Business {
  id                 String              @id @default(cuid())
  owner              User                @relation(fields: [ownerId], references: [id])
  ownerId            String
  name               String
  category           String?
  targetAudience     String?
  goals              String?
  voiceTone          String?
  brandColors        String?
  logoUrl            String?
  preferredEmotion   String?
  preferredStyle     String?
  voiceSampleText    String?
  brandVoiceVector   Json?
  preferredPlatforms String[]            @default([])
  templates          Template[]
  calendars          MarketingCalendar[]
  posts              ScheduledPost[]
  createdAt          DateTime            @default(now())
  updatedAt          DateTime            @updatedAt
}

model Template {
  id            String              @id @default(cuid())
  business      Business            @relation(fields: [businessId], references: [id])
  businessId    String
  name          String
  backgroundUrl String?
  backgroundColor String?
  orientation   TemplateOrientation
  tags          String[]            @default([])
  emotionFit    String[]            @default([])
  placeholders  Json
  canvasPreset  String?
  canvasWidth   Int?
  canvasHeight  Int?
  createdAt     DateTime            @default(now())
  updatedAt     DateTime            @updatedAt
  posts         ScheduledPost[]
}

model MarketingCalendar {
  id         String          @id @default(cuid())
  business   Business        @relation(fields: [businessId], references: [id])
  businessId String
  startDate  DateTime
  endDate    DateTime
  posts      ScheduledPost[]
  createdAt  DateTime        @default(now())
  updatedAt  DateTime        @updatedAt
}

model ScheduledPost {
  id            String             @id @default(cuid())
  business      Business           @relation(fields: [businessId], references: [id])
  businessId    String
  calendar      MarketingCalendar? @relation(fields: [calendarId], references: [id])
  calendarId    String?
  template      Template?          @relation(fields: [templateId], references: [id])
  templateId    String?
  date          DateTime
  theme         String?
  title         String?
  subtitle      String?
  caption       String?
  hashtags      String[]           @default([])
  emotion       String?
  backgroundUrl String?
  layoutType    String?
  renderedImage String?
  variants      Json?
  status        PostStatus         @default(PENDING)
  analytics     PostAnalytics?
  createdAt     DateTime           @default(now())
  updatedAt     DateTime           @updatedAt
}

model PostAnalytics {
  id          String        @id @default(cuid())
  post        ScheduledPost @relation(fields: [postId], references: [id])
  postId      String        @unique
  impressions Int           @default(0)
  likes       Int           @default(0)
  downloads   Int           @default(0)
  edits       Int           @default(0)
  generatedAt DateTime      @default(now())
  createdAt   DateTime      @default(now())
}
